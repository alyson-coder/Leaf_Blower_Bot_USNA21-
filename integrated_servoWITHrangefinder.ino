#include <Ticker.h>#include <Servo.h>#define trigPin 3 //pwm pin#define echoPin 2// Initialize Servo Object Servo servo1; // Declare Global Variables and Functionsint joint1 = 0;int i = 100;int k = 2;  float duration, distance;void rotate_servo(); void range_finder();// Create Ticker Object for RangefinderTicker tickerObject(range_finder, 100); // Declare Ticker Object Ticker ticker_Servo(rotate_servo, 50); void setup() {      // Attach the Servo   servo1.attach(5);       // Attach the rangefinder    pinMode(trigPin, OUTPUT);  pinMode(echoPin, INPUT);    Serial.begin(9600); // DEFINE THE BAUD RATE HERE<--------  // Start Tickers  ticker_Servo.start();   tickerObject.start(); //start the ticker for the rangefinder}void loop() {   ticker_Servo.update(); // servo_rotate()   tickerObject.update(); // range_finder    }void rotate_servo(){  servo1.write(i);   if (i == 140){      k = -1;      }    if(i == 70){    k= 1;    }    i = i + k;     }      // Range Finder Function void range_finder() {   // Attach the rangefinder      digitalWrite(trigPin, LOW);   delayMicroseconds(2);   digitalWrite(trigPin, HIGH);  delayMicroseconds(10);  digitalWrite(trigPin, LOW);    duration = pulseIn(echoPin, HIGH);  distance = (duration / 2) * 0.0344;    Serial.print(distance);  Serial.println("cm");}